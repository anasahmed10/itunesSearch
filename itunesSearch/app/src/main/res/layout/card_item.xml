<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/trackTitle"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="25dp"
            android:text="TextView"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/trackArtist"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trackTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="14dp"
            android:text="TextView"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/trackPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="138dp"
            android:layout_marginTop="28dp"
            android:layout_toEndOf="@+id/trackTitle"
            android:text="TextView" />

        <TextView
            android:id="@+id/trackGenreName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trackArtist"
            android:layout_alignParentStart="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="15dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/trackReleaseDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trackPrice"
            android:layout_marginStart="155dp"
            android:layout_marginTop="19dp"
            android:layout_toEndOf="@+id/trackArtist"
            android:text="TextView" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>